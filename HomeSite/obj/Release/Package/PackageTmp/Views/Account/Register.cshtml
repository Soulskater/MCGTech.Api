@model HomeSite.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h3>Create a new account.</h3>
</hgroup>

@using (Html.BeginForm("Register", "Account", new { }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Email</label>
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control maxWidth", placeholder = "Email" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">First name</label>
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control maxWidth", placeholder = "First name" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail" class="col-lg-2 control-label">Last name</label>
        <div class="col-lg-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control maxWidth", placeholder = "Last name" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-lg-2 control-label">Password</label>
        <div class="col-lg-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control maxWidth", placeholder = "Password" })
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-lg-2 control-label">Confirm Password</label>
        <div class="col-lg-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control maxWidth", placeholder = "Confirm Password" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-default">Register</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
