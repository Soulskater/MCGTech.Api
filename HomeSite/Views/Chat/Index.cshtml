@{
    ViewBag.Title = "Chat";
}
<div style="width: 250px; height: 300px; position: absolute; right: 30px; bottom: 50px;background:#ededed;">
    <div style="position:relative; min-height: 35px; background-color: #5bc0de; border: solid transparent; border-width: 0px 0px 1px 0px;z-index:1;">
        <button class="pull-right glyphicon glyphicon-remove" style="color:#fff; background:none;border:none;margin-top:5px;padding:5px; width:30px;height:30px;"></button>
        <button class="pull-right glyphicon glyphicon-minus" style="color:#fff; background:none;border:none;margin-top:5px;padding:5px; width:30px;height:30px;"></button>
    </div>
    <div style="position:absolute; top:0;left:0;right:0;bottom:0; background:#ededed;box-shadow: 2px 2px 5px 0px #B1B1B1;"></div>
    @*<div style="min-height: 35px; border-bottom: 1px solid #B1B1B1; background-color: rgba(0,0,0,.2); border: solid transparent; border-width: 0px 0px 1px 0px; box-shadow: 0px 1px 1px 0px #B1B1B1;"></div>*@
    <input type="text" placeholder="Type message here" class="flat-form-control" style="z-index:1; position: absolute;bottom: 0;margin: 0px;" />
</div>
