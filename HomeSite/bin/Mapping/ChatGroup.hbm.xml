<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="HomeSite.Dal" namespace="HomeSite.Dal.Domain">
  <class name="ChatGroup">
    <id name="ChatGroupID">
      <generator class="identity"></generator>
    </id>
    <property name="Created"/>
    <property name="Inactive"/>
    <set name="Users" table="UserChatGroup"  inverse="true" cascade="all">
      <key column="chatGroupId"/>
      <many-to-many class="User" column="userId"/>
    </set>
    <bag name="ChatLogs" inverse="false" cascade="all">
      <key column="chatGroupId"/>
      <one-to-many class="ChatLog"/>
    </bag>
  </class>
</hibernate-mapping>