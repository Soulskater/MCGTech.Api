<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="HomeSite.Dal" namespace="HomeSite.Dal.Domain">
  <class name="User" table="`User`">
    <id name="UserID">
      <generator class="identity"></generator>
    </id>
    <property name="Email"/>
    <property name="Identifier"/>
    <property name="Firstname"/>
    <property name="Lastname"/>
    <set name="Forums" inverse="true" lazy="true" cascade="all" >
      <key column="moderatorId"/>
      <one-to-many class="Forum"/>
    </set>
    <set name="Posts" inverse="true" lazy="true" cascade="all" >
      <key column="userId"/>
      <one-to-many class="ForumPost"/>
    </set>
    <set name="ChatGroups" table="UserChatGroup" cascade="all">
      <key column="userId"/>
      <many-to-many class="ChatGroup" column="chatGroupId"/>
    </set>
  </class>
</hibernate-mapping>