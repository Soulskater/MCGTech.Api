<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="HomeSite.Dal" namespace="HomeSite.Dal.Domain">
  <class name="Forum">
    <id name="ForumID">
      <generator class="identity"></generator>
    </id>
    <property name="Name"/>
    <property name="Description"/>
    <property name="Created"/>
    <property name="Identifier"/>
    <many-to-one name="Moderator" column="moderatorId" />
    <set name="Posts" inverse="true" lazy="true" >
      <key column="forumId"/>
      <one-to-many class="ForumPost"/>
    </set>
  </class>
</hibernate-mapping>